{
  "name": "cuenote",
  "version": "0.1.0",
  "description": "AI-Powered Local-First Markdown Note-Taking App",
  "author": "CueNote Team",
  "license": "MIT",
  "private": true,
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "build:renderer": "vite build",
    "build:electron": "pnpm build:renderer && electron-builder --win",
    "build:all": "pnpm build:renderer && electron-builder --win",
    "typecheck": "vue-tsc --noEmit"
  },
  "dependencies": {
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/language": "^6.12.1",
    "@codemirror/state": "^6.5.3",
    "@codemirror/view": "^6.39.9",
    "@cuenote/contracts": "workspace:*",
    "@cuenote/shared": "workspace:*",
    "@lezer/highlight": "^1.2.3",
    "@tiptap/extension-code-block-lowlight": "^3.15.3",
    "@tiptap/extension-highlight": "^3.15.3",
    "@tiptap/extension-image": "^3.15.3",
    "@tiptap/extension-link": "^3.15.3",
    "@tiptap/extension-placeholder": "^3.15.3",
    "@tiptap/extension-table": "^3.15.3",
    "@tiptap/extension-table-cell": "^3.15.3",
    "@tiptap/extension-table-header": "^3.15.3",
    "@tiptap/extension-table-row": "^3.15.3",
    "@tiptap/extension-task-item": "^3.15.3",
    "@tiptap/extension-task-list": "^3.15.3",
    "@tiptap/extension-text-align": "^3.15.3",
    "@tiptap/extension-typography": "^3.15.3",
    "@tiptap/extension-underline": "^3.15.3",
    "@tiptap/pm": "^3.15.3",
    "@tiptap/starter-kit": "^3.15.3",
    "@tiptap/vue-3": "^3.15.3",
    "@vitejs/plugin-vue": "^5.0.4",
    "codemirror": "^6.0.2",
    "lowlight": "^3.3.0",
    "vue": "^3.4.21"
  },
  "devDependencies": {
    "@types/node": "^22.0.2",
    "electron": "^28.2.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.5.4",
    "vite": "^5.3.3",
    "vue-tsc": "^2.0.26"
  },
  "build": {
    "appId": "com.cuenote.app",
    "productName": "CueNote",
    "icon": "../../assets/icon.png",
    "directories": {
      "output": "release"
    },
    "files": [
      "main.js",
      "dist/**/*",
      "node_modules/**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,readme.md,README,readme}",
      "!node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!node_modules/.cache/**/*"
    ],
    "extraResources": [
      {
        "from": "../core-dist",
        "to": "core",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "icon": "../../assets/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "CueNote"
    }
  }
}
