{
  "name": "cuenote-monorepo",
  "version": "0.2.0",
  "private": true,
  "workspaces": [
    "apps/desktop",
    "packages/contracts",
    "packages/shared"
  ],
  "scripts": {
    "dev:desktop": "pnpm --filter cuenote dev",
    "dev:core": "cd apps/core && python -m uvicorn app.main:app --reload --host 127.0.0.1 --port 8787",
    "dev:all": "concurrently \"pnpm dev:core\" \"pnpm dev:desktop\"",
    "build:core": "cd apps/core && pyinstaller cuenote-core.spec --noconfirm && xcopy /E /I /Y dist\\cuenote-core ..\\core-dist",
    "build:core:mac": "cd apps/core && pyinstaller cuenote-core.spec --noconfirm && cp -r dist/cuenote-core ../core-dist",
    "build:desktop": "pnpm --filter cuenote build:all",
    "build:desktop:mac": "pnpm --filter cuenote build:mac",
    "build:all": "powershell -ExecutionPolicy Bypass -File scripts/build-all.ps1",
    "build:all:mac": "bash scripts/build-all.sh",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "@eslint/js": "^9.0.0",
    "eslint": "^9.0.0",
    "eslint-plugin-vue": "^9.24.0",
    "globals": "^15.0.0",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.12",
    "typescript": "^5.4.3",
    "typescript-eslint": "^7.5.0",
    "vue-eslint-parser": "^9.4.2"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild"
    ]
  }
}
